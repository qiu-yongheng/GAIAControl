<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/ripple_tile_device">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                       android:shape="rectangle">
                    <solid android:color="@color/background_tile_disabled"/>
                    <corners android:radius="@dimen/no_corner"/>
                    <stroke android:width="@dimen/no_border"/>
                </shape>
            </item>

            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                       android:shape="rectangle">
                    <solid android:color="@color/background_tile_device"/>
                    <corners android:radius="@dimen/no_corner"/>
                    <stroke android:width="@dimen/no_border"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>